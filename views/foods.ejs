<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Urunler</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">

</head>

<body class="bg-dark">

    <%- include('partials/navbar') %>

    <h1>urunler</h1>
    <div class="container row d-flex flex-wrap justify-content-center align-items- mx-auto ">
        <% foods.forEach(food=> { %>
            <div class="card col-lg-4 col-md-6 col-sm-10 p-3 m-3">
                <img src="img/<%= food.imgSrc %>" class="card-img-top" style="max-height: 250px" alt="...">
                <div class="card-body row pb-0">
                    <h5 class="card-title p-0 col">
                        <%= food.title %>
                    </h5>
                    <p class="card-text col p-0 text-end">
                        <%= food.price %>
                            <%= food.moneyUnit %>
                    </p>
                    <div class="align-self-end px-0">
                        <a href="foods/<%= food.id %>" class="btn btn-dark inline-block col-12 mb-0">Detay</a>
                    </div>

                </div>
            </div>
            <% }) %>
        </div>


</body>

</html>